<h2 class="text-center">edit</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin', method: :put }) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave blank if no change",
                required: false,
                 label: false, placeholder: "New password" %>
    <%= f.input :password_confirmation,
                required: false,
                 label: false, placeholder: "New password confirmation" %>
    <%= f.input :current_password,
                hint: "Enter current password to confirm your changes",
                required: true,
                 label: false, placeholder: "Enter current password" %>
  

  
    <%= f.button :submit, "Update",class: "btn btn-danger btn-block" %>
    

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
<% end %>

 
