<h2 class="text-center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" }, label: false, placeholder: "Email"%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password Confirmation" %>
 

 
    <%= f.button :submit, "Sign up", class: "btn btn-danger btn-block" %>
  
<% end %>

