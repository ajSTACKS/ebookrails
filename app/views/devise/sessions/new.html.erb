<h2 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, label: false, placeholder: "Email" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label: false, placeholder: "Password" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-danger btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

 
