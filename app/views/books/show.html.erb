<div class="row">
	
	<div class="col-6">
		<%= image_tag @book.image.url, class: 'img-fluid '%>
	</div>
	<div class="col-6">
		<h3><%= @book.name %> by <%= @book.author %></h3>
		<br>
		<p>
			<%= @book.description %>
		</p>
		<br>
		<h3 class="text-center">Book Price: $<%= @book.price/100 %></h3>
<% if current_user %>
	<%= form_tag buy_path(slug: @book.slug) do %>
		<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		data-description="<%= @book.name %>"
		data-name="ebook"
		data-amount="<%= @book.price %>"
		data-email="<%= current_user.email %>"
		data-locale="auto"></script>
	<% end %>

	<% else %>

	<p>Please log in to buy this book</p>

	<% end %>
	</div>
</div>


