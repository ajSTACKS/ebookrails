<h1>Dashboard</h1>
<div class="row">
	
	<div class="col-md-4">
		<h3>Books <%= link_to 'New Book', new_book_path, class: 'btn btn-info' %>
</h3>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Name</th>
					<th scope="col">Availability</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= book.id %></td>
					<td><%= link_to book.name, book_path(book) %></td>
					<td><%= book.availability %></td>
					<td><%= link_to 'Edit', edit_book_path(book) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<h3>Purchases</h3>
	</div>
	<div class="col-md-4">
		<h3>Sales</h3>
		
	</div>
</div>